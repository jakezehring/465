

<% if @my_images %>
  <h1> Your Images </h1>
  <% @my_images.each do |image| %>
    <%= link_to  image_tag(root_url + "/images/" + image.filename, size: "100x100", alt: image.filename), image %>
  <% end %>
<% end %>

<% if @shared_images %>
  <h1> Images that have been shared with you </h1>
  <% @shared_images.each do |image| %>
    <div class="item">
    <%= link_to image_tag(root_url + "/images/" + image.filename, size: "100x100", alt: image.filename), image %>
    <span class="caption"><%= image.user.name %></span>
    </div>
  <% end %>
<% end %>

<h1> Public Images </h1>

<% @public_images.each do |image| %>
  <% if image.user != current_user %>
    <div class ="item">
    <%= link_to image_tag(root_url + "/images/" + image.filename, size: "100x100", alt: image.filename), image %>
    <span class="caption"><%= image.user.name %> </span>
    </div>
  <% end %> 
<% end %>


