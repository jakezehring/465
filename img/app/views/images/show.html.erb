<p id="notice"><%= notice %></p>

<p>
  <%= image_tag root_url + "/images/" + @image.filename %>
</p>

<p>
  <strong>User:</strong>
  <%= @image.user.name %>
</p>

<p>
  <strong>Private:</strong>
  <%= @image.private %>
</p>

<p>
  <strong>Tags:</strong>
  <br>
  <% @tags.each do |tag| %>
    <% if !tag.new_record? %>
      <%= tag.str %>
      <%= link_to "edit", edit_tag_path(tag) %>
      <%= link_to "Delete", tag, method: :delete, data: {confirm: "Are you sure?" } %>
      <br>
    <% end %>
  <% end %>
</p>

<p>
  <strong>Add new tag</strong>
  <%= render "tags/form" %>
</p>



