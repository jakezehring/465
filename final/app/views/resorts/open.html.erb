<h2> Open Reservations </h2>

<% if @open == nil %>
  <h2> All reservations taken! </h2>
<% else %>
  <% @open.each do |cur| %>
    <% if cur %>
      <strong><%= cur.start.strftime("%B %d, %Y") %> </strong>
      <br>
    <% end %>
  <% end %>
<% end %>

<% if current_user && current_user.admin == true && @closed != nil %>
  <h1> Closed Reservations </h1>
  <% @closed.each do |cur| %>
    <% if cur %>
      <strong> <%= cur.start.strftime("%B %d, %Y") %> <br>
      user: <%= cur.user.name %> <br>
      end: <%= cur.end.strftime("%B %d, %Y") %> <br>
      people: <%= cur. people %> <br> 
      <br>
    <% end %>
  <% end %>
<% end %>
